        <xpath expr="//a[contains(@t-attf-href, '/web/login?redirect=/blog/{{slug(blog_post.blog_id)}}/{{slug(blog_post)}}#discussion')]" position="attributes">
            <!-- Use the custom URL logic to generate the correct URL -->
