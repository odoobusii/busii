<odoo>
    <data>
      <template id="custom_report_Invoice" inherit_id="account.report_invoice_document">
        <xpath expr="//div[hasclass('row')]/div[@name='address_not_same_as_shipping']/div[1]/t[2]" position="replace">
          <p>VAT no.: <span t-field="o.partner_id.vat"/> </p>
        </xpath>
        <xpath expr="//div[hasclass('row')]/div[@name='address_same_as_shipping']/div[1]/t[2]" position="replace">
          <p>VAT no.: <span t-field="o.partner_id.vat"/> </p>
        </xpath>
        <xpath expr="//div[hasclass('row')]/div[@name='no_shipping']/div[1]/t[2]" position="replace">
          <p>VAT no.: <span t-field="o.partner_id.vat"/> </p>
        </xpath>
        <xpath expr="//p[@name='payment_communication']" position="replace">
          <br></br>
          Please use the following reference for your payment :
            <b>
              <span t-field="o.payment_reference"/>
            </b>
        </xpath>
      </template>
    </data>
</odoo>